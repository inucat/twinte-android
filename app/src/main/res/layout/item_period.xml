<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/period_number_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/period_start_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:40"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/period_end_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:55"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:text="講義名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/period_name_text_view" />

        <TextView
            android:id="@+id/period_instructor_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="講師"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/period_room_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3A202"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
